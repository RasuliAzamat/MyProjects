<h1 class="display-3 mt-3 mb-4">Добавить новый товар</h1>
{{#if error}}
<p class="error">{{error}}</p>
{{/if}}
<form action="/add" method="POST">

  <div class="form-floating mb-3">
    <input type="text" id="title" name="title" class="form-control" placeholder="Введите название"
      value="{{ values.title }}">
    <label for="floatingInput">Название товара</label>
  </div>

  <div class="form-floating mb-3">
    <input type="number" id="price" name="price" class="form-control" placeholder="Введите цену"
      value="{{ values.price }}">
    <label for="floatingInput">Цена товара</label>
  </div>

  <div class="form-floating mb-4">
    <input type="text" id="img" name="img" class="form-control" placeholder="Введите url картинки"
      value="{{ values.img }}">
    <label for="floatingInput">URL картинки товара</label>
  </div>

  <input type="hidden" name="_csrf" value="{{ csurf }}">

  <button class="btn btn-primary">Добавить товар</button>

</form>
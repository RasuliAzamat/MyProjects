<div class="row">

    <h1 class="display-5 mt-3 mb-4">Изменить пароль</h1>

    {{#if error}}
        <p class="error">{{error}}</p>
    {{/if}}

    <form action="/auth/password" method="POST">

        <div class="form-floating mb-3">
            <input type="password" id="password" name="password" class="form-control" id="floatingInput"
                placeholder="Введите новый пароль">
            <label for="floatingInput">Новый пароль</label>
        </div>

        <input type="hidden" name="_csrf" value="{{csurf}}">
        <input type="hidden" name="userId" value="{{userId}}">
        <input type="hidden" name="token" value="{{token}}">

        <button class="btn btn-primary">Изменить</button>
    </form>
</div>
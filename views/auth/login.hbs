<div class="row">
    <ul class="nav nav-tabs justify-content-center nav-fill" role="tablist">
        <li class="nav-item " role="presentation">
            <a href="#login" class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login"
                type="button" role="tab" aria-controls="login" aria-selected="true">Войти</a>
        </li>
        <li class="nav-item" role="presentation">
            <a href="#register" class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register"
                type="button" role="tab" aria-controls="register" aria-selected="false">Зарегистрирваться</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade show active mt-2" id="login" role="tabpanel" aria-labelledby="login-tab">
            <form action="/auth/login" method="post">
                <h1 class="display-5 mb-4">Войти в аккаунт</h1>
                {{#if loginError}}
                    <p class="error">{{loginError}}</p>
                {{/if}}
                <div class="form-floating mb-3">
                    <input type="email" id="email" name="email" class="form-control" placeholder="Введите Email">
                    <label for="email">Email</label>
                </div>
                <div class="form-floating mb-3 mt-4">
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Введите Пароль">
                    <label for="password">Пароль</label>
                </div>

                <input type="hidden" name="_csrf" value="{{csurf}}">

                <p><a href="/auth/reset">Забыли пароль?</a></p>

                <button class="btn btn-primary">Войти</button>

            </form>
        </div>
        <div class="tab-pane fade mt-2" id="register" role="tabpanel" aria-labelledby="register-tab">
            <form action="/auth/register" method="post">
                <h1 class="display-5 mb-4">Создать аккаунт</h1>
                {{#if registerError}}
                    <p class="error">{{registerError}}</p>
                {{/if}}

                <div class="form-floating mb-3">
                    <input type="text" id="name" name="name" class="form-control" placeholder="Введите ваше Имя">
                    <label for="name">Имя</label>
                </div>

                <div class="form-floating mb-3 mt-4">
                    <input type="email" id="regEmail" name="email" class="form-control" placeholder="Введите Email">
                    <label for="regEmail">Email</label>
                </div>

                <div class="form-floating mb-3 mt-4">
                    <input type="password" id="regPassword" name="password" class="form-control"
                        placeholder="Введите Пароль">
                    <label for="regPassword">Пароль</label>
                </div>

                <div class="form-floating mb-3 mt-4">
                    <input type="password" id="confirm" name="confirm" class="form-control"
                        placeholder="Введите Пароль">
                    <label for="confirm">Пароль еще раз</label>
                </div>

                <input type="hidden" name="_csrf" value="{{csurf}}">

                <button class="btn btn-primary">Создать</button>
            </form>
        </div>
    </div>
</div>
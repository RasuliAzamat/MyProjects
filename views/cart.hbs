<h1 class="display-3 mt-3 mb-4">Корзина товаров</h1>

<div id="cart">
  {{#if products.length}}
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Название</th>
        <th scope="col">Количество</th>
        <th scope="col">Действия</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-danger js-remove" data-csurf="{{@root.csurf}}" data-id="{{id}}">Удалить</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <td>
          <p class="lead">Цена: <strong class="price">{{ price }}</strong></p>
        </td>
        <td colspan="100%">
          <form action="/orders" method="post">
            <button class="btn btn-primary">Сделать заказ</button>
            <input type="hidden" name="_csrf" value="{{ csurf }}">
          </form>
        </td>
      </tr>
    </tfoot>
  </table>
  {{else}}
  <p class="lead">Ваша корзина товаров пуста. Добавьте же что-нибудь!</p>
  {{/if}}
</div>